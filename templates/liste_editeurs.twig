{% extends 'base.twig' %}

{% block main %}
	<h1>Liste des éditeurs</h1>
	<ul class="list">
		{% for editeur in tableau_editeurs %}
			<li>
				<a href="detail_editeur.php?id={{ editeur.id }}">
					{{ editeur.nom }}
				</a>
			</li>
		{% endfor %}
	</ul>
	<form method="post" action="liste_editeurs.php">
		<h2>Ajouter un éditeur</h2>
		<div>
			<label for="nom">Nom :</label>
			<input type="text" id="nom" name="nom" size="50">
		</div>
		<div>
			<label for="adresse">Adresse :</label>
			<input type="text" id="adresse" name="adresse" size="50">
		</div>
		<div>
			<button type="submit">Ajouter</button>
		</div>
	</form>
{% endblock %}
